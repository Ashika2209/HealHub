/* Appointments Tab Layout */
.pdash-appt-tab {
  margin-top: 1.2rem;
}
.pdash-appt-header-row {
  display: flex;
  align-items: center;
  margin-bottom: 0.5rem;
}
.pdash-appt-header-title {
  font-size: 1.4rem;
  font-weight: 700;
  margin-right: 1.5rem;
}
.pdash-appt-header-desc {
  color: #888;
  font-size: 1rem;
  margin-bottom: 1.2rem;
}
.pdash-appt-list {
  display: flex;
  flex-direction: column;
  gap: 1.2rem;
}
.pdash-appt-card {
  background: #fff;
  border-radius: 14px;
  box-shadow: 0 2px 8px rgba(31,38,135,0.07);
  display: flex;
  align-items: center;
  padding: 1.2rem 1.5rem;
  gap: 1.2rem;
  border-left: 4px solid #7f5fff;
  margin-bottom: 0.2rem;
}
.pdash-appt-icon {
  background: linear-gradient(135deg, #7f5fff 0%, #5ae6ff 100%);
  color: #fff;
  border-radius: 10px;
  width: 48px;
  height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 2rem;
}
.pdash-appt-info {
  flex: 1;
}
.pdash-appt-doctor {
  font-weight: 600;
  font-size: 1.1rem;
}
.pdash-appt-dept {
  color: #4b3aff;
  font-size: 1rem;
  margin-bottom: 0.2rem;
}
.pdash-appt-datetime {
  color: #888;
  font-size: 0.98rem;
}
.pdash-appt-status {
  padding: 0.4rem 1.2rem;
  border-radius: 8px;
  font-size: 1rem;
  font-weight: 500;
  background: #eafaf1;
  color: #1dbf73;
  margin-left: 1rem;
  min-width: 100px;
  text-align: center;
}
.pdash-appt-status.consultation {
  background: #eafaf1;
  color: #1dbf73;
}
.pdash-appt-status.followup {
  background: #e3e7ff;
  color: #4b3aff;
}
.pdash-appt-status.checkup {
  background: #fff4cf;
  color: #d48806;
}
.pdash-appt-status.emergency {
  background: #ffe5e5;
  color: #d32f2f;
}
.pdash-appt-status.procedure {
  background: #eef2ff;
  color: #4338ca;
}
.pdash-appt-status.therapy {
  background: #f4f9ff;
  color: #1d4ed8;
}
.pdash-appt-actions {
  display: flex;
  align-items: center;
  gap: 0.6rem;
  margin-left: auto;
}
.pdash-appt-meta {
  color: #667085;
  font-size: 0.92rem;
  margin-top: 0.35rem;
}
.pdash-appt-status-text {
  font-weight: 500;
}

.pdash-error-banner {
  background: #fff5f5;
  border: 1.5px solid #f5c2c7;
  color: #c62828;
  padding: 0.8rem 1rem;
  border-radius: 10px;
  margin-bottom: 1rem;
  font-size: 0.95rem;
}

.pdash-feedback {
  padding: 0.75rem 1rem;
  border-radius: 10px;
  margin-bottom: 1rem;
  font-size: 0.95rem;
  font-weight: 500;
}
.pdash-feedback.success {
  background: #f0fff7;
  border: 1.5px solid #b4f1ce;
  color: #1b7f4b;
}
.pdash-feedback.error {
  background: #fff5f4;
  border: 1.5px solid #f5c2c7;
  color: #c62828;
}

.pdash-loading,
.pdash-loading-inline {
  color: #667085;
  text-align: center;
  font-size: 1rem;
}
.pdash-loading {
  padding: 2rem 1rem;
}
.pdash-loading-inline {
  padding: 0.75rem 0;
}

.pdash-empty-state {
  border: 1.5px dashed #d0d5dd;
  background: #f9fafb;
  border-radius: 10px;
  padding: 1rem 1.2rem;
  color: #667085;
  text-align: center;
  font-size: 0.95rem;
}

.pdash-input-row {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  margin-bottom: 0.7rem;
}
.pdash-input-row .pdash-input {
  margin-bottom: 0;
}
.pdash-input-row .pdash-add-btn {
  margin: 0;
}
.pdash-add-btn:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.pdash-refresh-btn {
  background: #ffffff;
  border: 1.5px solid #cdd4ff;
  color: #4b3aff;
  border-radius: 8px;
  padding: 0.55rem 1.2rem;
  font-size: 0.98rem;
  cursor: pointer;
  transition: background 0.2s, border-color 0.2s;
}
.pdash-refresh-btn:hover {
  background: #f4f5ff;
}
.pdash-refresh-btn:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}
/* Add (+) Button for Medical History, Allergies, Medications */
.pdash-add-btn {
  background: #181828;
  color: #fff;
  border: none;
  border-radius: 7px;
  width: 2.2rem;
  height: 2.2rem;
  font-size: 1.3rem;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: background 0.2s;
}
.pdash-add-btn:hover {
  background: #4b3aff;
}
