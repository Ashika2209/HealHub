/* Layout */
html, body, #root {
  height: 100%;
  margin: 0;
  padding: 0;
}
.pdash-root {
  display: flex;
  height: 100vh;
  width: 100vw;
  background: #f8f9fb;
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
.pdash-sidebar {
  width: 250px;
  background: #fff;
  box-shadow: 2px 0 8px rgba(31,38,135,0.06);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 1.5rem 0 1rem 0;
}
.pdash-logo {
  display: flex;
  align-items: center;
  gap: 0.7rem;
  font-size: 1.3rem;
  font-weight: 700;
  color: #4b3aff;
  margin-left: 2rem;
  margin-bottom: 2rem;
}
.pdash-logo-icon {
  background: linear-gradient(135deg, #7f5fff 0%, #5ae6ff 100%);
  color: #fff;
  border-radius: 12px;
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 2rem;
}
.pdash-nav {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  margin-left: 2rem;
}
.pdash-nav-link {
  color: #4b3aff;
  background: none;
  border: none;
  font-size: 1.1rem;
  padding: 0.6rem 1.2rem;
  border-radius: 8px;
  text-decoration: none;
  transition: background 0.2s, color 0.2s;
  cursor: pointer;
}
.pdash-nav-link.active, .pdash-nav-link:hover {
  background: #eae6ff;
  color: #7f5fff;
}
.pdash-sidebar-bottom {
  margin-left: 2rem;
}
.pdash-user {
  color: #888;
  font-size: 0.95rem;
  margin-bottom: 0.5rem;
}
.pdash-logout {
  background: none;
  border: none;
  color: #f44336;
  font-size: 1rem;
  cursor: pointer;
  display: flex;
  align-items: center;
  gap: 0.3rem;
}

/* Main Content */
.pdash-main {
  flex: 1;
  padding: 2.5rem 3rem 2rem 3rem;
}
.pdash-header h2 {
  font-size: 2rem;
  font-weight: 700;
  margin-bottom: 0.2rem;
}
.pdash-header-desc {
  color: #888;
