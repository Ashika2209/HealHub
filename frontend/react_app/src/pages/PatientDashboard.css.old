  transition: background 0.2s, color 0.2s;
}
.pdash-tab.active, .pdash-tab:hover {
  background: #f3f3ff;
  color: #4b3aff;
}
.pdash-schedule-btn {
  margin-left: auto;
  background: #7f5fff;
  color: #fff;
  border: none;
  border-radius: 8px;
  padding: 0.5rem 1.2rem;
  font-size: 1rem;
